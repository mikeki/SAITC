<% title "Posts" %>

<table>
  <tr>
    <th>Name</th>
    <th>Topic</th>
    <th>Date</th>
    <th>Content</th>
    <th>Link</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%=h post.name %></td>
      <td><%=h post.topic %></td>
      <td><%=h post.date %></td>
      <td><%=h post.content %></td>
      <td><%=h post.link %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Post", new_post_path %></p>
