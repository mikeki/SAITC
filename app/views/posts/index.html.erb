<div id="maincol">
 <%if current_user%>
		<div id="top_section"><%= link_to "Nueva Noticia", new_post_path %></div>
		<div id="body_section"></div>
		<div id="bottom_section"></div>
	<%end%>
  <% for post in @posts %>
  		<div id="top_section">
  		  <div id="wrapper" class="clearfix" >
    			<div id="tituloNoticia">
      			<span id="titulo"><%=h post.name %></span>
          	<span id="fechaNoticia"><%=h "#{post.topic} #{post.date.to_formatted_s(:date)}" %></span>
        	</div>
        	<div id="linkNoticia">
        	  <%if post.haslink?%>
        	    <span><%= link_to image_tag("bface.png", :size=>"33x33", :border=>"0"), post.link%></span>
        	  <%end%>
        	</div>
      	</div>
      </div>
      <div id="body_section">
      		<p id="contenido">
      			<%=h sanitize(post.content.gsub("\n", "<br />")) %>
      			<br />
      			<%if current_user%>
    					<%= link_to "Edit", edit_post_path(post) %> |
    					<%= link_to "Destroy", post, :confirm => '¿Seguro que deséas eliminar esta noticia?', :method => :delete %>
      			<%end%>
      		</p>
      </div>
      <div id="bottom_section"></div>
  <% end %>
 
</div>
